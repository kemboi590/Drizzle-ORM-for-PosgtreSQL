{
  "compilerOptions": {
    "target": "ES2022",                 
    "module": "NodeNext", 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "esModuleInterop": true,        
    "strict": true,   
    "moduleResolution": "NodeNext", 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"], 
  "exclude": ["node_modules"]  
}
